<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns="http://com.mediasmiths.foxtel.ip.common.events/001/000" 
           xmlns:xs="http://www.w3.org/2001/XMLSchema"  
           targetNamespace="http://com.mediasmiths.foxtel.ip.common.events/001/000"
           xmlns:fns="http://com.mediasmiths.foxtel.ip.common.events/001/000"
           elementFormDefault="qualified" attributeFormDefault="unqualified" version="1.0">


    <xs:complexType name="IPEvent">
		<xs:annotation>
			<xs:documentation>The root type for events about the IP service infrastructure.
			</xs:documentation>
		</xs:annotation>
		<xs:sequence>
		</xs:sequence>
	</xs:complexType>


	<xs:complexType name="FilePickup">
		<xs:complexContent>
			<xs:annotation>
				<xs:documentation>The definition for File Pickup Details.
				</xs:documentation>
			</xs:annotation>
			<xs:extension base="fns:IPEvent">
				<xs:sequence>
					<xs:element name="pickUpKind" type="FilePickUpKinds" />
					<xs:element name="filePath" type="xs:string">
						<xs:annotation>
							<xs:documentation>The fully qualified name of the file
							</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="waitTime" type="xs:long">
						<xs:annotation>
							<xs:documentation>The time from file last changed to
							</xs:documentation>
						</xs:annotation>
					</xs:element>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>


	<xs:complexType name="CommFailure">
		<xs:complexContent>
			<xs:annotation>
				<xs:documentation>The details of a component or infrastructure communication failure.
				</xs:documentation>
			</xs:annotation>
			<xs:extension base="fns:IPEvent">
				<xs:sequence>
					<xs:element name="source" type="xs:string" />
					<xs:element name="target" type="xs:string" />
					<xs:element name="failureShortDesc" type="xs:string" />
					<xs:element name="failureLongDescription" type="xs:string" minOccurs="0"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

    <xs:complexType name="StorageReport">
        <xs:complexContent>
            <xs:annotation>
                <xs:documentation>The details of storage use within the infrastructure.
                </xs:documentation>
            </xs:annotation>
            <xs:extension base="fns:IPEvent">
                <xs:sequence>
                    <xs:element name="report" type="fns:StorageUsageDetails" minOccurs="1" />

                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="StorageUsageDetails">
        <xs:annotation>
            <xs:documentation>The Details of Storage use for a particular mount point</xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="fileSystemReference" type="xs:string" minOccurs="1" maxOccurs="1"/>
            <xs:element name="megaBytesUsed" type="xs:double" minOccurs="1" maxOccurs="1"/>
            <xs:element name="megaBytesFree" type="xs:double" minOccurs="1" maxOccurs="1"/>
        </xs:sequence>
    </xs:complexType>
	
	<xs:simpleType name="FilePickUpKinds">
		<xs:annotation>
			<xs:documentation>A list of the types of File Pickups with the IP Platform</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string">
			<xs:enumeration value="Placeholder"/>
			<xs:enumeration value="Media"/>
		</xs:restriction>
	</xs:simpleType>
</xs:schema>
