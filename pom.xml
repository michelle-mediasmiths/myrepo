<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.mediasmiths.foxtel</groupId>
	<artifactId>foxtel-parent</artifactId>
	<packaging>pom</packaging>
	<version>0.0.1-SNAPSHOT</version>

	<name>Foxtel Solution</name>

	<modules>
		<module>fx-mpa</module>
		<module>fx-MaterialExchange</module>
		<module>fx-PlaceholderManagement</module>
		<module>fx-PlaceholderManagementSchema</module>
		<module>fx-MayamClient</module>
	</modules>

	<properties>
		<junit.version>4.10</junit.version>
		<log4j.version>1.2.17</log4j.version>
		<commons-io.version>2.4</commons-io.version>
	</properties>

	<repositories>
		<repository>
			<id>mediasmiths-internal-repo</id>
			<url>http://build.mediasmiths.com/nexus/content/groups/public/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>mediasmiths-internal-snapshots</id>
			<url>http://build.mediasmiths.com/nexus/content/repositories/snapshots/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<distributionManagement>
		<repository>
			<id>mediasmiths-internal-repo</id>
			<name>Mediasmiths-releases</name>
			<url>http://build.mediasmiths.com/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>mediasmiths-internal-repo</id>
			<name>Mediasmiths-snapshots</name>
			<url>http://build.mediasmiths.com/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

</project>
